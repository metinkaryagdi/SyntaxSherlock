{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "submission-route": {
        "ClusterId": "submission-cluster",
        "Match": {
          "Path": "/api/submissions/{**catch-all}"
        }
      },
      "report-route": {
        "ClusterId": "report-cluster",
        "Match": {
          "Path": "/api/reports/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "submission-cluster": {
        "Destinations": {
          "d1": { "Address": "http://submission-api:8080" }
        }
      },
      "report-cluster": {
        "Destinations": {
          "d1": { "Address": "http://report-api:8080" }
        }
      }
    }
  },
  "AllowedHosts": "*"
}
