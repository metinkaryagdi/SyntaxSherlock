{
  "name": "kod-duzeltme-frontend",
  "version": "1.0.0",
  "description": "Modern Python kod analizi uygulaması - Türkçe hata açıklamaları ve çözüm önerileri ile profesyonel kod kalitesi değerlendirmesi",
  "main": "dist/index.html",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t kod-duzeltme-frontend .",
    "docker:run": "docker run -d -p 3000:3000 --name kod-duzeltme-frontend kod-duzeltme-frontend",
    "docker:stop": "docker stop kod-duzeltme-frontend",
    "docker:remove": "docker rm kod-duzeltme-frontend"
  },
  "keywords": [
    "python",
    "code-analysis",
    "react",
    "typescript",
    "vite",
    "turkish",
    "flake8",
    "pycodestyle",
    "code-quality",
    "frontend"
  ],
  "author": {
    "name": "Gökhan Güçlü",
    "email": "gokhan@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gokhan/kod-duzeltme-frontend.git"
  },
  "bugs": {
    "url": "https://github.com/gokhan/kod-duzeltme-frontend/issues"
  },
  "homepage": "https://github.com/gokhan/kod-duzeltme-frontend#readme",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "axios": "^1.6.2",
    "react-icons": "^4.12.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ]
}
